<MainWindow>:
    name: "main"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline: False
                text: "delsix"

        Button:
            text: "Submit"
            on_release:
                app.root.current = "not main" if password.text == "delsix" else "main"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "not main"

    Button:
        text: "Go back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"

    Button:
        text: "Fun thingy"
        on_release:
            app.root.current = "not not main"
            root.manager.transition.direction = "right"


