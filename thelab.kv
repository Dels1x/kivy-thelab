WidgetsExample:

<WidgetsExample@GridLayout>:
    cols: 3

    BoxLayout:
        orientation: "vertical"
        size_hint: None, 1
        width: "120dp"
        ToggleButton:
            text: "*5: OFF"
            on_state: root.on_toggle_5_state(self)
            size_hint: None, 1
            width: "120dp"
        ToggleButton:
            text: "Lock counter: OFF"
            on_state: root.on_toggle_enable_state(self)
            size_hint: None, 1
            width: "120dp"

    BoxLayout:
        orientation: "vertical"
        Button:
            text: "+"
            on_press: root.on_plus_button_click()
        Button:
            text: "-"
            on_press: root.on_minus_button_click()

    Label:
        text: root.text
        font_name: "fonts/Lcd.ttf"
        font_size: "128dp"
        color: "#7294FF"

<PageLayoutExample@PageLayout>:
    MainWidget:
    BoxLayoutExample:
    AnchorLayoutExample:
    GridLayoutExample:
    ScrollViewExample:

<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>:
    # orientation: "rl-tb"
    spacing: "5dp", "5dp"

<GridLayoutExample@GridLayout>:
    cols: 4
    Button:
        text: "A"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
    Button:
        text: "E"
    Button:
        text: "F"
    Button:
        text: "G"
    Button:
        text: "H"
    Button:
        text: "I"
    Button:
        text: "J"


<AnchorLayoutExample>:
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: 0.2, 0.2
        Button:
            text: "A"
        Button:
            text: "B"


<BoxLayoutExample>:
    orientation: "horizontal"
    spacing: "2dp"

    BoxLayout:
        orientation: "vertical"
        size_hint: 0.5, 1
        Button:
            text: "A"
            size_hint: 1, 0.5
            pos_hint: {"center_y": 0.5}
        Button:
            text: "B"
            size_hint: 1, 0.5
            pos_hint: {"center_y": 0.5}

    BoxLayout:
        orientation: "vertical"
        spacing: "2dp"
        Button:
            text: "C1"
        Button:
            text: "C2"
        Button:
            text: "C3"
        Button:
            text: "C4"
    ScrollViewExample:

<MainWidget>:
    Button:
        text: "Hello"
        size: "240dp", "80dp"
        pos: "0dp", "0dp"
